<Window x:Class="influx2Exporter.Views.MainWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:views="clr-namespace:influx2Exporter.Views"
 Title="InfluxDB2 Exporter - Configuration"
 Height="720" Width="1440"
 WindowStartupLocation="CenterScreen"
 Background="#1f1f1f"
 FontFamily="Segoe UI"
 WindowStyle="SingleBorderWindow"
 ResizeMode="CanResize"
 KeyDown="Window_KeyDown">
 <!-- Resources -->
 <Window.Resources>
 <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
 </Window.Resources>
 <Grid Margin="10" Background="#EEE9DD">
 <Grid.RowDefinitions>
 <RowDefinition Height="Auto"/>
 <RowDefinition Height="2"/>
 <RowDefinition Height="*"/>
 </Grid.RowDefinitions>

 <!-- Reusable Header -->
 <views:HeaderView Grid.Row="0"/>

 <!-- Separator -->
 <Border Grid.Row="1" Background="#C7C7C7"/>

 <!-- Content region wrapped in Border (fix incorrect Grid properties) -->
 <Border Grid.Row="2" Background="#F7F6F2" CornerRadius="3" Margin="0,8,0,0" BorderBrush="#D0D0D0" BorderThickness="1">
 <Grid>
 <!-- Landing view visible when not in query mode -->
 <views:LandingView>
 <views:LandingView.Style>
 <Style TargetType="views:LandingView">
 <Setter Property="Visibility" Value="Visible"/>
 <Style.Triggers>
 <DataTrigger Binding="{Binding IsQueryMode}" Value="True">
 <Setter Property="Visibility" Value="Collapsed"/>
 </DataTrigger>
 </Style.Triggers>
 </Style>
 </views:LandingView.Style>
 </views:LandingView>

 <!-- Query builder view visible when in query mode -->
 <views:QueryBuilderView>
 <views:QueryBuilderView.Style>
 <Style TargetType="views:QueryBuilderView">
 <Setter Property="Visibility" Value="Collapsed"/>
 <Style.Triggers>
 <DataTrigger Binding="{Binding IsQueryMode}" Value="True">
 <Setter Property="Visibility" Value="Visible"/>
 </DataTrigger>
 </Style.Triggers>
 </Style>
 </views:QueryBuilderView.Style>
 </views:QueryBuilderView>
 </Grid>
 </Border>
 </Grid>
</Window>
