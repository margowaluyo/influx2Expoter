<UserControl x:Class="influx2Exporter.Views.Controls.DateTimePicker"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 MinHeight="28">
 <Grid>
 <Grid.ColumnDefinitions>
 <ColumnDefinition Width="160"/>
 <ColumnDefinition Width="60"/>
 <ColumnDefinition Width="60"/>
 <ColumnDefinition Width="60"/>
 </Grid.ColumnDefinitions>
 <DatePicker x:Name="PART_Date" Grid.Column="0" SelectedDateChanged="OnDateChanged"/>
 <ComboBox x:Name="PART_Hour" Grid.Column="1" Margin="4,0,0,0" Width="56" SelectionChanged="OnTimePartChanged"/>
 <ComboBox x:Name="PART_Minute" Grid.Column="2" Margin="4,0,0,0" Width="56" SelectionChanged="OnTimePartChanged"/>
 <ComboBox x:Name="PART_Second" Grid.Column="3" Margin="4,0,0,0" Width="56" SelectionChanged="OnTimePartChanged"/>
 </Grid>
</UserControl>